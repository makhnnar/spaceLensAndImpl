<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPokemonFront"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:adjustViewBounds="true" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdH33"
        app:layout_constraintGuide_percent=".33"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal" />

    <com.pedrogomez.spacelensapp.view.ofertadetail.views.TitleSeccion
        android:id="@+id/tvTitleName"
        android:layout_width="0dp"
        style="@style/Widget.Theme.MyListAplication.TitleSeccion"
        app:layout_constraintTop_toBottomOf="@id/ivPokemonFront"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tsTitle="@string/title_name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:maxLines="2"
        android:text="Silla"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/tvTitleName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.pedrogomez.spacelensapp.view.ofertadetail.views.TitleSeccion
        android:id="@+id/tvTitleDescription"
        android:layout_width="0dp"
        style="@style/Widget.Theme.MyListAplication.TitleSeccion"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tsTitle="@string/title_desc"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="en un lugar muy lejano del que ya no me acuerdo"
        android:textColor="@color/black_overlay"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/tvTitleDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.pedrogomez.spacelensapp.view.ofertadetail.views.TitleSeccion
        android:id="@+id/tvTitlePrice"
        android:layout_width="0dp"
        style="@style/Widget.Theme.MyListAplication.TitleSeccion"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tsTitle="@string/title_price"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="12"
        android:textColor="@color/black_overlay"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.pedrogomez.spacelensapp.view.ofertadetail.views.TitleSeccion
        android:id="@+id/tvTitleOwner"
        android:layout_width="0dp"
        style="@style/Widget.Theme.MyListAplication.TitleSeccion"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tsTitle="@string/title_owner"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOwner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/dummy_desc"
        android:textColor="@color/black_overlay"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/tvTitleOwner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.pedrogomez.spacelensapp.view.ofertadetail.views.TitleSeccion
        android:id="@+id/tvTitleDir"
        android:layout_width="0dp"
        style="@style/Widget.Theme.MyListAplication.TitleSeccion"
        app:layout_constraintTop_toBottomOf="@id/tvOwner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tsTitle="@string/title_direction"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/dummy_desc"
        android:textColor="@color/black_overlay"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/tvTitleDir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.pedrogomez.spacelensapp.view.ofertadetail.views.TitleSeccion
        android:id="@+id/tvTitleDate"
        android:layout_width="0dp"
        style="@style/Widget.Theme.MyListAplication.TitleSeccion"
        app:layout_constraintTop_toBottomOf="@id/tvDir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tsTitle="@string/title_date_creation" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/dummy_desc"
        android:textColor="@color/black_overlay"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/tvTitleDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/emptyView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black_overlay"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_arrow_left"
        app:tint="@color/black_overlay"/>

</merge>